<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{{appTitle}}</title>
    <link href="/stylesheets/css-reset.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="/stylesheets/style.css" rel="stylesheet">
    <script src="/socket.io/socket.io.js"></script>
  </head>

  <body class="bg-primary-subtle">
    <nav class="navbar navbar-expand-lg bg-primary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Home</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <form id="searchForm" class="d-flex" role="search">
        <input id="search" class="form-control rounded-start-pill" type="search" placeholder="Search" aria-label="Search">
        <button class="btn rounded-end-pill" type="submit" style="background-color: rgb(192, 192, 192);">
          <i class="bi bi-search"></i>
        </button>
      </form>
    </div>
  </div>
  <div id="results-container" class="position-relative mt-3">
    <ul id="results" class="list-unstyled"></ul>
  </div>
</div>


          {{#if user}}
          <a href="/auth/matches"><button class="btn btn-info rounded-pill"><i class="bi bi-rocket-takeoff-fill me-1"></i>Match me!</button></a>
          
          {{/if}}

          <div class="navbar-nav d-flex align-items-center">
            {{#if user}}
              <a class="nav-link" href="/auth/profile">{{user.username}}</a>
              
              <div class="dropdown-center">
                <button class="dropdown-toggle no-arrow" data-bs-toggle="dropdown">
                <div class="circle-crop nav-item" style="width:50px;height:50px;display:inline-flex">
                    {{#if user.profilePic}}
                    <img src="/uploads/{{user.profilePic}}">
                    {{else}}
                    <img src="/images/Profile-PNG-File.png">
                    {{/if}}
                </div>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                  <li><a class="dropdown-item" href="/auth/profile"><i class="bi bi-person-circle me-2"></i>Profile</a></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="/auth/inbox"><i class="bi bi-inbox-fill me-2"></i>Inbox</a></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="/auth/logout" style="color: red;"><i class="bi bi-box-arrow-in-right me-2"></i>Logout</a></li>
                </ul>
              </div>
            
            {{else}}
              <a href="/auth/login"><button class="btn btn-success rounded-pill">Login</button></a>
            
            {{/if}}
          </ul>
        </div>
      </div>
    </nav>
<ul id="results" class="list-group mt-3"></ul>
    
    <script src="/js/script.js"></script>
    <script src="/js/search.js"></script>

    {{{body}}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>

</html>