<h3 class="center">My Offers</h3>
<div class="d-flex justify-content-center flex-wrap px-auto" style="width: 100%;">
{{#each offers}}

<div class="card offer-card text-left mx-3 mb-4">
  <h5 class="card-header center">{{this.name}}</h5>
  <div class="card-body">
    <p class="card-text"> 
        <img src="/images/{{this.language}}.svg" class="lang-flag">
        <span class="lang-name">{{this.language}}</span>
    </p>
    <p class="card-text">{{this.level}}</p>
    <p class="card-text">{{this.locationType}}</p>
    {{#if this.location}}
    <p class="card-text">{{this.location}}</p>
    {{/if}}
    <p class="card-text">{{this.classType}}
    {{#if this.maxGroupSize}}
    <span class="card-text">(Up to {{this.maxGroupSize}} students)</span>
    {{/if}}
    </p>
    <p class="card-text"><i class="bi bi-clock-fill me-2"></i>{{this.duration}} Minutes</p>
    <p class="card-text"><i class="bi bi-tag-fill me-2"></i>{{this.price}} $</p>

    <div class="d-flex justify-content-center mt-3">
        <a href="/auth/myoffers/{{this._id}}/edit" class="btn btn-secondary mx-1"><i class="bi bi-pencil-square me-2"></i>Edit</a>
        <a href="/auth/myoffers/{{this._id}}/delete" class="btn btn-danger mx-1"><i class="bi bi-x-circle-fill me-2"></i>Delete</a>
    </div>
  </div>
</div>

{{/each}}
</div>

<div class="d-flex justify-content-center mt-3">
    <a href="/auth/myoffers/new">
    <button class="btn btn-primary mx-auto"><i class="bi bi-clipboard2-plus-fill me-2"></i>Create Offer</button></a>
</div>

<script>
    const spans = [...document.querySelectorAll('.lang-name')];
        for (lang of spans) {
        lang.innerText = getLanguageName(lang.innerText)
    }
</script>