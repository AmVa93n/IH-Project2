{{#if errorMessage}}
  <div class="alert alert-danger d-flex align-items-center" role="alert">
    <svg xmlns="http://www.w3.org/2000/svg" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:" style="width: 1em">
      <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
    </svg>
    <div>
      {{errorMessage}}
    </div>
  </div>
{{/if}}

<div class="content-box">
  <h2 class="center">Login</h2>
  <form action="/auth/login" method="POST">

    <div class="form-floating mb-3">
      <input type="text" name="username" id="username" placeholder="Your username" class="form-control" autocomplete="username">
      <label for="username">Username</label>
    </div>

    <div class="form-floating mb-3">
      <input type="password" name="password" id="password" placeholder="Your password" class="form-control" autocomplete="current-password">
      <label for="password">Password</label>
    </div>

    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-primary mb-3">Login</button>
    </div>
  </form>
  
    <p class="center">Don't have an account yet?</p>
    <div class="d-flex justify-content-center">
      <a href="/auth/signup"><button class="btn btn-primary">Sign Up</button></a>
    </div>
  
</div>