{{#if errorMessage}}
<div class="alert alert-danger d-flex align-items-center justify-content-center" role="alert">
  <i class="bi bi-exclamation-triangle-fill me-2"></i>
  {{errorMessage}}
</div>
{{/if}}

<div class="content-box">
  <h2 class="center">Login</h2>
  <form action="/auth/login" method="POST">

    <div class="form-floating mb-3">
      <input type="text" name="username" id="username" placeholder="Your username" class="form-control" autocomplete="username">
      <label for="username">Username</label>
    </div>

    <div class="form-floating mb-3">
      <input type="password" name="password" id="password" placeholder="Your password" class="form-control" autocomplete="current-password">
      <label for="password">Password</label>
    </div>

    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-success mb-3 rounded-pill">Login</button>
    </div>
  </form>
  
    <p class="center">Don't have an account yet?</p>
    <div class="d-flex justify-content-center">
      <a href="/auth/signup"><button class="btn btn-dark rounded-pill">Sign Up</button></a>
    </div>
  
</div>