<h4 class="center my-3">{{matches.length}} languages found</h4>
<div class="d-flex flex-wrap mx-auto" style="width: 92%;">
{{#each matches}}

<div class="language-card mb-3 mx-2">
    <a href="/languages/{{this._id}}" class="link-text">
        <div class="d-flex align-items-center mb-3 position-relative">
            <div class="circle-crop me-2" style="width:50px;height:50px;display:inline-flex">
                {{#if this.flag}}
                <img src="/uploads/{{this.flag}}" alt="{{this.name}} flag" style="width:100%;height:100%;object-fit:cover;">
                {{/if}}
            </div>
        
            {{#if this.isPopular}}
            <span class="badge rounded-pill text-bg-primary position-absolute" style="top:-8px;right:-8px;">Popular</span>
            {{/if}}
        </div>
        <div class="language-details">
            <h5 class="mb-1">{{this.name}}</h5>
            <small class="text-muted">{{this.country}}</small>
        </div>
    </a>
</div>

{{/each}}
</div>

